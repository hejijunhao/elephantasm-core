# API Settings
PROJECT_NAME=Elephantasm API
VERSION=0.1.0
API_PREFIX=/api

# CORS Settings (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Database Settings
# Runtime: Transaction pooler (port 6543)
DATABASE_URL=postgresql://user:password@host:6543/postgres
# Migrations: Direct connection (port 5432)
MIGRATION_DATABASE_URL=postgresql://user:password@host:5432/postgres

# LLM Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith Tracing (Optional - for debugging/monitoring)
# Sign up at https://smith.langchain.com to get API key
LANGSMITH_TRACING=false
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=elephantasm-memory-synthesis
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# Memory Synthesis Configuration
SYNTHESIS_THRESHOLD=10.0
LLM_CONCURRENCY_LIMIT=50
SYNTHESIS_TIME_WEIGHT=1.0
SYNTHESIS_EVENT_WEIGHT=0.5
SYNTHESIS_TOKEN_WEIGHT=0.0003
SYNTHESIS_JOB_INTERVAL_HOURS=1
SYNTHESIS_LLM_MAX_TOKENS=1024
SYNTHESIS_LLM_TEMPERATURE=0.7

# Anthropic/OpenAI Model Selection
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
OPENAI_MODEL=gpt-4o
